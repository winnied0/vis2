{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Area burnt by bushfires in Australia during the 2019-20 bushfire season (in ha)",
    "width": 600,
    "height": 350,
    "projection": {"type": "equirectangular"},
    "data": {
      "url": "https://raw.githubusercontent.com/winnied0/vis2/refs/heads/main/ne_50m_admin%20(3).json",
      "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
    },
    "transform": [
      {
        "lookup": "properties.name",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/winnied0/vis2/refs/heads/main/Normalised_Bushfire_19_v2%20(1).csv"
          },
          "key": "State",
          "fields": ["Area"]
        }
      },
      {"calculate": "datum.Area * 1", "as": "Percentage of State Area Burnt"}
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "Percentage of State Area Burnt",
        "type": "quantitative",
        "scale": {
          "type": "linear",
          "domain": [0, 2, 5, 6, 20], 
          "range": ["#ffffb2", "#ffb94c", "#ff7518", "#e63600", "#7f0000"]
         }
      },
      "tooltip": [
        {"field": "properties.name", "type": "nominal", "title": "State"},
        {"field": "Percentage of State Area Burnt", "type": "quantitative", "title": "Percentage of State Area Burnt"}
      ]
    }
  }
 
 
