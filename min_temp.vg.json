{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "title": "Mean Min Temperature of Australian States and Territories (2000-2023)",
    "data": {
      "url": "https://raw.githubusercontent.com/winnied0/vis2/refs/heads/main/Mean%20Min%20Temp%20(20%3A23%20final).csv",
      "format": {
        "type": "csv",
        "parse": {
          "Date": "date"
        }
      }
    },
    "params": [
      {
        "name": "Year_Above",
        "value": 2017,
        "bind": {
          "input": "range",
          "min": 2000,
          "max": 2023,
          "step": 1,
          "name": "Select the year: "
        }
      }
    ],
    "transform": [
      {
        "filter": "year(datum.Date) == Year_Above"
      }
    ],
    "layer": [
      {
        "selection": {
          "highlight": {
            "type": "single",
            "fields": ["State"],
            "empty": "all"  
          }
        },
        "mark": "line",
        "encoding": {
          "x": {
            "field": "Date",
            "type": "temporal",
            "title": "Date"
          },
          "y": {
            "field": "Temperature",
            "type": "quantitative",
            "title": "Temperature (°C)"
          },
          "color": {
            "condition": {
              "selection": "highlight",  
              "field": "State",
              "type": "nominal",
              "scale": {
                "domain": [
                  "Australian Capital Territory",
                  "New South Wales",
                  "Northern Territory",
                  "Queensland",
                  "South Australia",
                  "Tasmania",
                  "Victoria",
                  "Western Australia"
                ],
                "range": [
                  "#87CEEB", 
                  "#B0E0E6", 
                  "#87CEEB", 
                  "#6495ED",
                  "#1E90FF", 
                  "#4169E1", 
                  "#0000CD", 
                  "#00008B"
                ]
              }
            },
            "value": "lightgray"  
          },
          "tooltip": [
            {
              "field": "Date",
              "type": "temporal",
              "title": "Date Temperature Was Recorded On:"
            },
            {
              "field": "Temperature",
              "type": "quantitative",
              "title": "Mean Maximum Temperature (°C):"
            }
          ]
        }
      }
    ]
  }
  